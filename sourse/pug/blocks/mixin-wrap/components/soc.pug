mixin item-sos(icon, a='#')
	+e.A.item(href=a target="_blank" class=icon)
		if block
			block
		else
			//-+icon(icon)
			img(loading="lazy" src=`img/svg/soc-${icon}.svg` alt="")
//- social buttons
mixin soc()
	+b.soc
		if block
			block
		else
			+item-sos('fb')
			+item-sos('vk')
			+item-sos('in')

